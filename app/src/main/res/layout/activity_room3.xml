<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="apackage.cs407.Room3">

    <View
        android:id="@+id/inventoryHelper3"
        android:layout_width="250dp"
        android:layout_height="400dp"
        android:background="#3344DD"
        android:layout_centerInParent="true"
        android:visibility="invisible" />

    <View
        android:id="@+id/currentItemHelper3"
        android:layout_width="250dp"
        android:layout_height="275dp"
        android:background="#3344DD"
        android:layout_centerInParent="true"
        android:visibility="invisible" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/currentItem3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_below="@id/currentItemHelper3"
        android:layout_toEndOf="@id/currentItemHelper3"
        android:layout_toRightOf="@id/currentItemHelper3"
        android:src="@mipmap/ic_launcher" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/inventoryButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_below="@id/inventoryHelper3"
        android:layout_toEndOf="@id/inventoryHelper3"
        android:layout_toRightOf="@id/inventoryHelper3"
        android:src="@mipmap/backpack" />

    <Button
        android:id="@+id/Return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Return to Room 2"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp" />

    <ImageButton
        android:id="@+id/Case1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/glasscase"
        android:layout_alignTop="@+id/Case3"
        android:layout_alignLeft="@+id/Door"
        android:layout_alignStart="@+id/Door"
        android:scaleType="fitXY"
        android:padding="0dp"/>

    <ImageButton
        android:id="@+id/Case2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:srcCompat="@mipmap/glasscase"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:padding="0dp"/>

    <ImageButton
        android:id="@+id/Case3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/glasscase"
        android:layout_above="@+id/Case2"
        android:layout_alignRight="@+id/Return"
        android:layout_alignEnd="@+id/Return"
        android:layout_marginBottom="15dp"
        android:scaleType="fitXY"
        android:padding="0dp"/>

    <ImageButton
        android:id="@+id/Door"
        android:layout_width="100dp"
        android:layout_height="200dp"
        app:srcCompat="@mipmap/door"
        android:layout_alignTop="@+id/Return"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:scaleType="fitXY"
        android:padding="0dp"/>
    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="460dp"
        android:text="Quit" />

</RelativeLayout>
