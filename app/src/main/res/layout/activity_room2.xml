<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="apackage.cs407.Room2">

    <View
        android:id="@+id/inventoryHelper2"
        android:layout_width="250dp"
        android:layout_height="400dp"
        android:background="#3344DD"
        android:layout_centerInParent="true"
        android:visibility="invisible" />

    <View
        android:id="@+id/currentItemHelper2"
        android:layout_width="250dp"
        android:layout_height="275dp"
        android:background="#3344DD"
        android:layout_centerInParent="true"
        android:visibility="invisible" />

    <View
        android:id="@+id/door3Helper"
        android:layout_width="75dp"
        android:layout_height="250dp"
        android:background="#3344DD"
        android:layout_centerInParent="true"
        android:visibility="invisible" />

    <View
        android:id="@+id/door4Helper"
        android:layout_width="75dp"
        android:layout_height="250dp"
        android:background="#3344DD"
        android:layout_centerInParent="true"
        android:visibility="invisible" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/inventoryButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_below="@id/inventoryHelper2"
        android:layout_toEndOf="@id/inventoryHelper2"
        android:layout_toRightOf="@id/inventoryHelper2"
        android:src="@mipmap/backpack" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/currentItem2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_below="@id/currentItemHelper2"
        android:layout_toEndOf="@id/currentItemHelper2"
        android:layout_toRightOf="@id/currentItemHelper2"
        android:src="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/Return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="Return to Room 1"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/Door3"
        android:layout_width="100dp"
        android:layout_height="200dp"
        app:srcCompat="@mipmap/door"
        android:layout_toLeftOf="@id/door3Helper"
        android:layout_alignTop="@id/door3Helper"
        android:scaleType="fitXY"
        android:padding="0dp" />

    <ImageButton
        android:id="@+id/finalkey"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@mipmap/key"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:scaleType="fitXY"
        android:padding="0dp"/>

    <ImageButton
        android:id="@+id/Door4"
        android:layout_width="100dp"
        android:layout_height="200dp"
        app:srcCompat="@mipmap/door"
        android:layout_toRightOf="@id/door4Helper"
        android:layout_toEndOf="@id/door4Helper"
        android:layout_alignTop="@id/door4Helper"
        android:scaleType="fitXY"
        android:padding="0dp" />

    <ImageButton
        android:id="@+id/Dog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/dog"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="0dp"
        android:scaleType="fitXY"/>
    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="460dp"
        android:text="Reset" />

</RelativeLayout>
