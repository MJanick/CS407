<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="apackage.cs407.Room4">

    <View
        android:id="@+id/inventoryHelper4"
        android:layout_width="250dp"
        android:layout_height="400dp"
        android:background="#3344DD"
        android:layout_centerInParent="true"
        android:visibility="invisible" />

    <View
        android:id="@+id/currentItemHelper4"
        android:layout_width="250dp"
        android:layout_height="275dp"
        android:background="#3344DD"
        android:layout_centerInParent="true"
        android:visibility="invisible" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/inventoryButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_below="@id/inventoryHelper4"
        android:layout_toEndOf="@id/inventoryHelper4"
        android:layout_toRightOf="@id/inventoryHelper4"
        android:src="@mipmap/backpack" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/currentItem4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_below="@id/currentItemHelper4"
        android:layout_toEndOf="@id/currentItemHelper4"
        android:layout_toRightOf="@id/currentItemHelper4"
        android:src="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/Return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Return to Room 2"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/Table"
        android:layout_toEndOf="@+id/Table" />

    <ImageButton
        android:id="@+id/Table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/table"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="40dp"
        android:scaleType="fitXY"
        android:padding="0dp"/>

    <ImageButton
        android:id="@+id/Fridge"
        android:layout_width="200dp"
        android:layout_height="225dp"
        app:srcCompat="@mipmap/fridge"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_above="@+id/Table"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="21dp"
        android:scaleType="fitXY"
        android:padding="0dp"/>

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="460dp"
        android:text="Quit" />

</RelativeLayout>
