<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="apackage.cs407.Room4">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/inventoryButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Table"
        android:layout_alignLeft="@+id/currentItem4"
        android:layout_alignStart="@+id/currentItem4"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="21dp"
        android:src="@mipmap/backpack" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/currentItem4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:src="@mipmap/ic_launcher"
        android:layout_alignBottom="@+id/Table"
        android:layout_alignRight="@+id/Return"
        android:layout_alignEnd="@+id/Return"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="79dp" />

    <Button
        android:id="@+id/Return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Return to Room 2"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/Table"
        android:layout_toEndOf="@+id/Table" />

    <ImageButton
        android:id="@+id/Table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/table"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp" />

    <ImageButton
        android:id="@+id/Fridge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/fridge"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_above="@+id/Table"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="21dp" />

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="460dp"
        android:text="Reset" />

</RelativeLayout>
